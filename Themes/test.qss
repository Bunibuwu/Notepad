/* ---------- GENERAL WINDOW ---------- */
QWidget {
    background-color: #282C34;
    color: #ABB2BF;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 12px;
}

/* ---------- QMAINWINDOW & FRAMES ---------- */
QMainWindow, QFrame {
    background-color: #282C34;
    border: none;
}

/* ---------- BUTTONS ---------- */
QPushButton {
    background-color: #3E4451;
    color: #ABB2BF;
    border: 1px solid #3E4451;
    border-radius: 4px;
    padding: 4px 8px;
}
QPushButton:hover {
    background-color: #4B5263;
    border: 1px solid #61AFEF;
}
QPushButton:pressed {
    background-color: #61AFEF;
    color: #282C34;
}

/* ---------- LINE EDIT & INPUTS ---------- */
QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox, QComboBox {
    background-color: #21252B;
    border: 1px solid #3E4451;
    border-radius: 4px;
    padding: 2px 4px;
    selection-background-color: #61AFEF;
    selection-color: #282C34;
    color: #ABB2BF;
}

/* ---------- TABLE & TREE VIEWS ---------- */
QTableView, QTreeView {
    background-color: #21252B;
    alternate-background-color: #2C313C;
    gridline-color: #3E4451;
    color: #ABB2BF;
    selection-background-color: #61AFEF;
    selection-color: #282C34;
}
QHeaderView::section {
    background-color: #3E4451;
    padding: 4px;
    border: 1px solid #2C313C;
    color: #ABB2BF;
}

/* ---------- TAB WIDGETS ---------- */
QTabWidget::pane {
    border: 1px solid #3E4451;
    top: -1px;
    background-color: #21252B;
}
QTabBar::tab {
    background: #3E4451;
    color: #ABB2BF;
    padding: 6px 12px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}
QTabBar::tab:selected {
    background: #61AFEF;
    color: #282C34;
}

/* ---------- MENU BAR & MENUS ---------- */
QMenuBar {
    background-color: #282C34;
    color: #ABB2BF;
}
QMenuBar::item {
    background: transparent;
    padding: 4px 8px;
}
QMenuBar::item:selected {
    background: #3E4451;
    color: #61AFEF;
}
QMenu {
    background-color: #282C34;
    border: 1px solid #3E4451;
    color: #ABB2BF;
}
QMenu::item:selected {
    background-color: #61AFEF;
    color: #282C34;
}

/* ---------- SCROLLBARS ---------- */
QScrollBar:vertical {
    border: none;
    background: #21252B;
    width: 12px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    background: #3E4451;
    min-height: 20px;
    border-radius: 6px;
}
QScrollBar::handle:vertical:hover {
    background: #61AFEF;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
    height: 0px;
}
QScrollBar:horizontal {
    border: none;
    background: #21252B;
    height: 12px;
}
QScrollBar::handle:horizontal {
    background: #3E4451;
    min-width: 20px;
    border-radius: 6px;
}
QScrollBar::handle:horizontal:hover {
    background: #61AFEF;
}
